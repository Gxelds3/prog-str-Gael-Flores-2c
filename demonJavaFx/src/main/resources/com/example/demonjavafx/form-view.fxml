<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox spacing="12" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demonjavafx.controles.FormController"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="20" right="20" left="20" top="20"/>
    </padding>

    <Label text="Formulario de ejemplo con validaciones"/>
    <Label text="Nombre: "/>
    <TextField fx:id="txtNombre" promptText="Ingresa tu nombre completo"/>

    <Label text="Email: "/>
    <TextField fx:id="txtEmail" promptText="Ingresa un email valido"/>

    <Label text="Edad:"/>
    <TextField fx:id="txtEdad" promptText="Ingresa tu edad"/>

    <Button text="Validar formulario" onAction="#onValidate"/>

    <Label fx:id="lblResultado"/>

</VBox>